{
  "name": "use-storage-persisted-state",
  "version": "1.0.2",
  "description": "A robust, type-safe React hook for persisting state in localStorage/sessionStorage with cross-component and cross-tab sync",
  "license": "MIT",
  "author": "Mikko Haapanen <mikko.h@iki.fi>",
  "keywords": [
    "react",
    "hooks",
    "localStorage",
    "sessionStorage",
    "state",
    "persist",
    "sync",
    "cross-tab",
    "storage",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mikkoha/use-storage-persisted-state"
  },
  "bugs": {
    "url": "https://github.com/mikkoha/use-storage-persisted-state/issues"
  },
  "homepage": "https://github.com/mikkoha/use-storage-persisted-state#readme",
  "type": "commonjs",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint .",
    "typecheck": "tsc",
    "check": "npm run typecheck && npm run lint",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run check && npm run test && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.2.7",
    "@types/use-sync-external-store": "^1.5.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "use-sync-external-store": "^1.6.0"
  }
}
